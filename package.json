{
  "name": "fcp-sfd-data",
  "version": "0.1.0",
  "description": "Data integration for Single Front Door",
  "main": ".server/index.js",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "npm run build:server",
    "docker:dev": "NODE_ENV=development npm run server:watch",
    "dev": "npm run server:watch",
    "dev:debug": "npm run server:debug",
    "git:pre-commit-hook": "npm run format:check && npm run lint && npm test",
    "postversion": "git add package.json package-lock.json && git commit -m $npm_package_version",
    "test": "jest --coverage --verbose --runInBand",
    "test:lint": "stamdard",
    "test:watch": "jest --watch",
    "server:watch": "nodemon --exec tsx --enable-source-maps ./src",
    "server:debug": "nodemon --exec tsx --enable-source-maps --inspect ./src",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node --use-strict ."
  },
  "author": "Defra DDTS",
  "contributors": [
    "Rana Salem <rana.salem@defra.gov.uk>"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@defra/hapi-tracing": "^1.0.0",
    "@elastic/ecs-pino-format": "^1.5.0",
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.12",
    "aws-embedded-metrics": "^4.2.0",
    "aws4": "^1.13.2",
    "convict": "^6.2.4",
    "global-agent": "^3.0.0",
    "hapi-pino": "^12.1.0",
    "hapi-pulse": "^3.0.1",
    "http-status-codes": "2.3.0",
    "https-proxy-agent": "^7.0.5",
    "lodash": "^4.17.21",
    "mongo-locks": "^3.0.2",
    "mongodb": "^6.10.0",
    "node-fetch": "^3.3.2",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "undici": "^6.20.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "4.3.2",
    "@types/convict": "^6.1.6",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.9.0",
    "@types/nunjucks": "^3.2.6",
    "@types/webpack-assets-manifest": "^5.1.4",
    "autoprefixer": "^10.4.20",
    "jest": "^29.7.0",
    "jest-fetch-mock": "3.0.3",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "standard": "17.1.2"
  }
}
